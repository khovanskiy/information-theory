<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.ifmo.ctddev.khovanskiy.information.android">

    <uses-sdk
            android:minSdkVersion="15"
            android:targetSdkVersion="23"/>
    <application
            android:debuggable="true"
            android:allowBackup="true"
            android:icon="@drawable/app_icon"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity
                android:name="ru.ifmo.ctddev.khovanskiy.information.android.MainActivity"
                android:configChanges="orientation|screenSize"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name="ru.ifmo.ctddev.khovanskiy.information.android.EntropyActivity"
                android:configChanges="orientation|screenSize"/>
        <activity
                android:name="ru.ifmo.ctddev.khovanskiy.information.android.RedundancyActivity"
                android:configChanges="orientation|screenSize"/>
        <activity
                android:name="ru.ifmo.ctddev.khovanskiy.information.android.AverageLength"
                android:configChanges="orientation|screenSize"/>
        <activity
                android:name="ru.ifmo.ctddev.khovanskiy.information.android.ArithmeticActivity"
                android:configChanges="orientation|screenSize"/>
        <activity
                android:name="ru.ifmo.ctddev.khovanskiy.information.android.ArithmeticDecodeActivity"
                android:configChanges="orientation|screenSize"/>
        <activity
                android:name="ru.ifmo.ctddev.khovanskiy.information.android.BinarySymmetricChannel"
                android:label="@string/binarySymmetricChannel"
                android:configChanges="orientation|screenSize"/>
    </application>

</manifest>
